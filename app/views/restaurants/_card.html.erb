<% @restaurants.each do |restaurant| %>
<div class="container">

  <div class="card">
    <div class="row">
      <div class="col">
        <div class="card-body">
          <h5 class="card-title"><%= restaurant.name.capitalize %></h5>
          <p class="card-text"><%= restaurant.category.capitalize %></p>

          <% unless restaurant.reviews.empty?%>
          <p class="card-text">Average Rating: <%= restaurant.average_rating %><%= ' ⭐️' * restaurant.average_rating %></p>
          <% end %>

          <p> <%= link_to "Read More", restaurant %>
          <p class="card-text"><small class="text-muted"><%= restaurant.created_at %></small></p>
      </div>
     </div>
      <div class="col">
        <%= render "map"%>
      </div>
    </div>
  </div>
</div>

<br>
<% end %>
